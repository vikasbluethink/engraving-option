    <table name="sales_order_grid" resource="default" engine="innodb">
        <column xsi:type="varchar" name="engraving_option" nullable="true" length="40" comment="engraving-option"/>
        <column xsi:type="int" name="is_engraving" nullable="true" comment="engraving"/>
